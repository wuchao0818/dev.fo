<ul class="menu-root">
  <% ['api', 'style-guide'].indexOf(type) === -1 && site.pages.find({type: type}).sort('order').each(function (p) { %>
    <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
    <% if (type === 'tutorials') { %>
      <% if (fileName === 'tutorials-instructions') { %>
        <li><h3>教程</h3></li>
      <% } %>
      <% if (fileName === 'smart-contract-instructions') { %>
        <li><h3>智能合约</h3></li>
      <% } %>
      <% if (fileName === 'system-resources') { %>
        <li><h3>系统合约</h3></li>
      <% } %>
      <% if (fileName === 'token-transfer') { %>
        <li><h3>Token 合约</h3></li>
      <% } %>
      <% if (fileName === 'node-instruction') { %>
        <li><h3>节点编程</h3></li>
      <% } %>
    <% } %>
    <li>
      <a href="<%- url_for(p.path) %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
    </li>
  <% }) %>
</ul>
