@import "_common"
@import "_header"
@import "_sidebar"
@import "_sponsors-index"
@import "_modal"

$width = 900px
$space = 40px

body
  
#logo
  span
    font-size: 1.2em

.sidebar
  display: none

#mobile-bar
  &.top
    background-color: transparent
    box-shadow: none
    .logo
      display: none

#hero
  padding: 100px 40px 0 40px 
  .imac
    text-align: center
    img
      width: 10em
      height:10em
  .inner
    max-width: $width
    margin: 0 auto
  .introduce
    margin: 0 auto  
    p
    text-align: center
    // letter-spacing: 0.05em
    color: #666666
    font-size: 1.25em
    font-family: "PingFangSC-Regular"
  .start
    p
    text-align: center
    // letter-spacing: 0.05em
    font-size: 1.25em
    font-family: "PingFangSC-Regular"
  .left, .right
    display: inline-block
    vertical-align: top
  .left
    width: 39%
  .right
    width: 61%
  .hero-logo
    width: 215px
    height: 215px
    float: right
    margin-right: 60px
  h1
    // margin: 0
    font-size: 3em
    font-family: "PingFangSC-Semibold"
    color:#333333
    text-align: center
  h2
    font-family: $logo-font
    font-weight: 500
    font-size: 2.4em
    margin: 0 0 10px
    display: none
  .button
    margin: 1em 0
    font-size: 1em
    // font-weight: 600
    // letter-spacing: .1em
    width: 9em
    height: 2.7em
    line-height: 2.7em
    text-align: center
    &:not(:last-child)
      margin-right: 2%
  .social-buttons
    list-style-type: none
    padding: 0
    li
      display: inline-block
      vertical-align: middle
      margin-right: 15px


#highlights
  // background-color: rgb(246 ,246 ,246 )
  padding: 4em 0
  // padding-bottom: 50px
  .inner
    max-width: 1300px
    margin: 0 auto
    text-align: center
    display: flex
    justify-content: space-around
  .point
    width: 30%
    height: 13em
    border:1px solid rgb(223,225,226)
    vertical-align: top
    box-sizing: border-box
    padding: 2em 2em
    border-radius: 5px
    &:hover, &.current
      border: 1px solid rgb(168,174,178)
    h2
      font-size: 1.75em
      font-family: "PingFangSC-Regular"
      color: #000000
      font-weight: normal 
      // font-weight: 400
      margin: 0
      padding: .5em 0
    p
      color: $light
    ul 
      padding: 0
      li
        list-style-type: none 
        padding: .3em 0
        a
         color: $green
         font-size: 1.1em
         font-family: "PingFangSC-Regular"
  .document
    max-width: 1300px
    margin: 0 auto
    text-align: center
    padding-top: 80px
    h2
      font-size: 2.8em
    ul
      display: flex
      padding: 0
      justify-content: space-around
      width: 80%
      margin: 0 auto
      list-style-type: none 
      flex-wrap: wrap
      li
        width: 50%
        padding: 0.8em 0 
        a
          font-size: 1.1em
          color: rgb(121,131,139)
          &:hover, &.current
            color: #000
            text-decoration: underline

#footer
  margin-top: 6em
  // padding: $space 1.5em
  color: #333333
  ul
    padding: 0
    margin: 0
    display: flex
    li
      text-align: center
      list-style-type: none
      width:2em
      position: relative
      .qrcode:hover .qrcodeImg
        display: block
      .hero-logo
        width: 1em
        height: 1em
      .qrcodeImg
        display: none 
        position: absolute
        bottom: 20px
        right: 20px
        width: 100px
        height: 100px

  .social-icon
    display: flex
    justify-content: center
    align-items: center
    // margin 0 5px
    padding: 1.8% 7.5% 1.8% 8.3%
    p
      margin: 0
      .downicon
        width: 3.2em
        height: 3.7em
        margin-bottom: 0.75em
    .foot-text
      font-size: 1.75em
      color: #333333
    .foot-contact
      text-align: center
      font-size: 1.2em
      color: #333333
      margin-bottom: 1.35em
  .Copyright
    p
      text-align: center  
      margin: 0
      padding: 1em 0
      font-size: 0.8em
  a
    font-weight: 700

@media screen and (max-width: $width)
  body
    -webkit-text-size-adjust: none
    font-size: 14px
  .sidebar
    display: block
  #header
    display: none
  #mobile-bar
    display: block
  #hero
    padding: $space 40px 30px
    .hero-logo
      float: none
      margin: 30px 0 15px
      width: 140px
      height: 140px
    .left, .right
      text-align: center
      width: 100%
    .introduce
      font-size: 1.2em
    h1
      font-size: 2em
    h2
      display: block
    .button
      font-size: .9em
  #special-sponsor
    span
      display: block
    img
      width: 125px
  #highlights
    .inner
      flex-wrap: wrap
    .point
      display: block
      margin: 0 auto
      width: 80%
      padding: 30px 40px 30px
      margin-bottom: 40px
    .document
      padding-top: 40px
      .Articles
        li
          width: 100%

  #footer
    ul
      li
        width: 2em 
        .hero-logo
          width: 1.2em 
          height: 1.2em 
        .qrcodeImg
          bottom: 30px
          right: 20px
          width: 70px
          height: 70px  
    .social-icon
      .foot-text,.foot-contact
        font-size: 1em

@media screen and (max-width: 1050px)
  #nav
    li
      margin: 0 1.3em
            
